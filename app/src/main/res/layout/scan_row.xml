<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_barcode"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/name_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barcode"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/number_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_add_circle" />

        <TextView
            android:id="@+id/values_pick"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="@string/values_zero"
            android:textAlignment="center" />

        <Button
            android:id="@+id/number_min"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_remove_circle" />
    </LinearLayout>
</RelativeLayout>